---
import Footer from "../components/Footer.astro";
import Logo from "../components/Logo.astro";
import Document from "./Document.astro";

const appTitle = "thomblweed";
---

<Document title={appTitle}>
    <div
        class="flex flex-col h-screen bg-gradient-to-b from-dark via-dark-secondary to-dark"
    >
        <main class="h-full mx-auto w-11/12 max-w-screen-xl">
            <Logo />
            <slot />
        </main>
        <Footer footerText={appTitle} />
    </div>
</Document>
